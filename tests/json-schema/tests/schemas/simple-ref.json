{
    "$id": "file:///simple-ref.json#",
    "type": "object",
    "properties": {
        "name": {"$ref": "/my-name.json"},
        "age": {"$ref": "#age"},
        "/": {"$ref": "#/definitions/~1"}
    },
    "required": ["name"],
    "definitions": {
        "age-def": {
            "$id": "#age",
            "type": "integer",
            "minimum": 0,
            "maximum": 200
        },
        "/": {
            "const": "slash"
        }
    }
}